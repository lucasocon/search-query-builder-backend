generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id        Int @id @default(autoincrement())
  email     String @unique
  name      String?

  skills     Skill[]
  positions   Position[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Skill {
  id         Int @id @default(autoincrement())
  name       String
  experience String
  seniority  String

  employeeId Int
  employee   Employee? @relation(fields: [employeeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Position {
  id        Int      @id @default(autoincrement()) 
  name      String

  employeeId Int
  employee   Employee? @relation(fields: [employeeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}